{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "extends": [
      "standard-jsx"
  ],
  "plugins": [
      "standard",
      "promise",
      "react",
      "flowtype"
  ],
  "globals": {
      "__DEV__": false
  },
  "rules": {
      "indent": 0,
      "react/jsx-indent": 0,
      "react/jsx-indent-props": 0,
  }
}
